# Learn how to configure the Mercure.rocks Hub on https://mercure.rocks/docs/hub/config
{
	{$GLOBAL_OPTIONS}
}

{$SERVER_NAME:localhost}

log {
	format filter {
		wrap console
		fields {
			uri query {
				replace authorization REDACTED
			}
		}
	}
}

{$EXTRA_DIRECTIVES}

route {
	encode zstd gzip

	mercure {
		# Transport to use (default to Bolt)
		transport_url {$MERCURE_TRANSPORT_URL:bolt://mercure.db}
		# Publisher JWT key
		publisher_jwt !ChangeMenfsdnfosdSDFSDfojfnze56448949sdfsdfZEFzepklf54984! {env.MERCURE_PUBLISHER_JWT_ALG}
		# Subscriber JWT key
		subscriber_jwt !ChangeMenfsdnfosdSDFSDfojfnze56448949sdfsdfZEFzepklf54984! {env.MERCURE_SUBSCRIBER_JWT_ALG}
		# Permissive configuration for the development environment
		cors_origins *
		publish_origins *
		demo
		anonymous true
		subscriptions
		SERVER_NAME=:3000
		# Extra directives
		{$MERCURE_EXTRA_DIRECTIVES}
	}

	redir / /.well-known/mercure/ui/
	respond /healthz 200
	respond "Not Found" 404
}
